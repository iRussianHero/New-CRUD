@model Post
@{
    ViewData["Title"] = "Edit";
}

<h1>EditPost</h1>


<form asp-action="Update" asp-controller="Post" asp-route-id="@Model.Id.ToString()" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title"/>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>

@*    <div class="mb-3">
        <label for="formFileMultiple" class="form-label">Multiple files input</label>
        <input name="ImageUrl" class="form-control" type="file" id="formFileMultiple" multiple value="@Model.ImageUrl">
    </div>*@

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" rows="3" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="row">
            <div class="col-6">
                <input type="submit" class="form-control btn btn-primary" value="Save" />
            </div>
@*            <div class="col-6">
                <a asp-action="Index" asp-controller="Post" class="form-control btn btn-primary">Cancel</a>
            </div>*@
        </div>
    </div>
</form>